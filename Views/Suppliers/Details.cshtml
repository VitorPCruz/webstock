@model WebStock.Models.Supplier

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Document:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Document)
        </dd>
        <dt class = "col-sm-2">
            E-mail:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Type:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierType)
        </dd>
        <dt class = "col-sm-2">
            Active:
        </dt>
        <dd class="text-center col-sm-1">
            @if (Model.Active == true)
            {
                <span><i class="fa-sharp fa-solid fa-circle-check"></i></span>
            }
            else
            {
                <span><i class="fa-solid fa-circle-xmark"></i></span>
            }
        </dd>
    </dl>
</div>

<hr/>
<h4>Actions</h4>
<div>
    <dl class="row">
        <dt class="col-sm-4 align-middle">
            Do you want edit the register?
        </dt>
        <dd class="col-sm-8 align-middle">
            <a asp-action="Register" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        </dd>
        <dt class="col-sm-4 align-middle">
            Do you want delete the register?
        </dt>
        <dd class="col-sm-8 align-middle">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </dd>
        <dt class="col-sm-4 align-middle">
            Return to index?
        </dt>
        <dd class="col-sm-8 align-middle">
             <a asp-action="Index" class="btn btn-dark">Back to List</a>
        </dd>
    </dl>
</div>

