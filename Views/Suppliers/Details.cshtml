@model WebStock.Models.Supplier

@{
    ViewData["Title"] = "Detalhes";
}

<h3>Detalhes do Fornecedor: @Model.Name</h3>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Documento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Document)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Fornecedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupplierType)
        </dd>
        <dt class = "col-sm-2">
            Ativo
        </dt>
        <dd class="text-center col-sm-1">
            @if (Model.Active == true)
            {
                <span><i class="fa-sharp fa-solid fa-circle-check"></i></span>
            }
            else
            {
                <span><i class="fa-solid fa-circle-xmark"></i></span>
            }
        </dd>
    </dl>
</div>

<hr/>
<h4>Ações</h4>
<div>
    <dl class="row">
        <dt class="col-sm-4 align-middle">
            Quer editar este registro?
        </dt>
        <dd class="col-sm-8 align-middle">
            <a asp-action="Register" asp-route-id="@Model?.Id" class="btn btn-success">Editar</a>
        </dd>
        <dt class="col-sm-4 align-middle">
            Quer remover este registro?
        </dt>
        <dd class="col-sm-8 align-middle">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" value="Delete" class="btn btn-danger">Remover</button>
            </form>
        </dd>
        <dt class="col-sm-4 align-middle">
            Quer retornar à lista?
        </dt>
        <dd class="col-sm-8 align-middle">
             <a asp-action="Index" class="btn btn-dark">Voltar</a>
        </dd>
    </dl>
</div>

