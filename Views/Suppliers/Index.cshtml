@model IEnumerable<WebStock.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<p class="title">List of Suppliers</p>
<hr />
<div>
    <h4>
        @ViewData["Title"] Registered: @Model.Count()
    </h4>
</div>
<p>
    <a asp-action="Register" class="btn btn-success">New Supplier</a>
</p>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead class="table-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                Document
            </th>
            <th>
                E-mail
            </th>
            <th class="text-center">
                Active?
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Document
                </td>
                <td>
                    @item.Email
                </td>
                <td class="text-center">
                    @if (item.Active == true)
                    {
                        <span><i class="fa-sharp fa-solid fa-circle-check"></i></span>
                    }
                    else
                    {
                        <span><i class="fa-solid fa-circle-xmark"></i></span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Register" asp-route-id="@item.Id" class="btn btn-warning text-black" title="Edit"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Details"><i class="fa-solid fa-magnifying-glass"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
