@model IEnumerable<WebStock.Models.Report>

@{
    ViewData["Title"] = "Histórico";
}

<p class="title">Histórico do Estoque</p>
<hr/>
<table class="table table-striped table-bordered bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Data e Hora</th>
            <th scope="col">Nome</th>
            <th scope="col">Cód. Prod.</th>
            <th scope="col">Operação</th>
            <th scope="col">Qnt Op.</th>
            <th scope="col">Antes Op.</th>
            <th scope="col">Depois Opr.</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Moment.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.ProductName</td>
                <td>@item.ProductCode</td>
                <td>@Html.DisplayFor(modelItem => item.Operation)</td>
                <td>@item.OperationQuantity</td>
                <td>@item.BeforeOperation</td>
                <td>@item.AfterOperation</td>
            </tr>
        }
    </tbody>
</table>
