@model IEnumerable<WebStock.Models.Report>

@{
    ViewData["Title"] = "History";
}

<h1>History from Storage</h1>

<table class="table table-striped table-bordered ">
    <thead class="table-dark">
        <tr>
            <th scope="col">Moment</th>
            <th scope="col">Name</th>
            <th scope="col">Product Code</th>
            <th scope="col">Operation</th>
            <th scope="col" class="columnsAlignEnd">Qnt Op.</th>
            <th scope="col" class="columnsAlignEnd">Before Op.</th>
            <th scope="col" class="columnsAlignEnd">After Oper.</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Moment.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.ProductName</td>
                <td>@item.ProductCode</td>
                <td>@item.Operation</td>
                <td class="columnsAlignEnd">@item.OperationQuantity</td>
                <td class="columnsAlignEnd">@item.BeforeOperation</td>
                <td class="columnsAlignEnd">@item.AfterOperation</td>
            </tr>
        }
    </tbody>
</table>
