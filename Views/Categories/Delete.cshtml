@model WebStock.Models.Category

@{
    ViewData["Title"] = "Remover";
}

<p class="title">@Model.Name</p>

<h4>Deseja remover @Model.Name?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ativo?
        </dt>
        <dd class="col-sm-10">
            @if (Model.Active == true) {
                <span><i class="fa-sharp fa-solid fa-circle-check"></i></span>
            }
            else {
                <span><i class="fa-solid fa-circle-xmark"></i></span>
            }
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Remover</button>
        <a asp-action="Index" class="btn btn-dark">Voltar</a>
    </form>
</div>
