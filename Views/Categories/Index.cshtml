@model IEnumerable<WebStock.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<p class="title">List of @ViewData["Title"]</p>
<hr />
<div>
    <h4>
        @ViewData["Title"] Registered: @Model.Count()
    </h4>
</div>
<p>
    <a asp-action="Register" class="btn btn-success">New Category</a>
</p>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead class="table-dark">
        <tr>
            <th scope="col" class="col-sm-7">
                Category Name
            </th>
            <th scope="col" class="col-sm-3 text-center">
                Active?
            </th>
            <th scope="col" class="col-sm-2 text-center">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center text-light">
                    @if (item.Active == true)
                    {
                        <i class="fa-sharp fa-solid fa-circle-check"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-circle-xmark"></i>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Register" asp-route-id="@item.Id" class="btn btn-warning text-black">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>