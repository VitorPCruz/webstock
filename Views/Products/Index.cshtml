@model IEnumerable<WebStock.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}

<p class="title">Lista de @ViewData["Title"]</p>
<hr />
<div>
    <h4>
        @ViewData["Title"] cadastrados: @Model.Count()
    </h4>
</div>
<p>
    <a asp-action="Create" class="btn btn-success">Novo Produto</a>
</p>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead class="table-dark">
        <tr>
            <th>
                Nome Prod.
            </th>
            <th>
                Código Prod.
            </th>
            <th>
                Fornecedor
            </th>
            <th class="text-center">
                Ativo?
            </th>
            <th class="text-center">
                Quantidade
            </th class="text-center">
            <th class="text-center">
                Ações
            </th>
        </tr>
    </thead>
    <tbody >
        @foreach (var item in Model) 
        {
            <tr class="align-middle">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @if(item.SupplierId != null)
                    {
                        <span>@item.Supplier.Name</span>
                    }
                    else
                    {
                        <span>Sem fornecedor</span>
                    }
                </td>
                <td class="text-center">
                    @if(item.Active == true)
                    {
                        <span><i class="fa-sharp fa-solid fa-circle-check"></i></span>
                    }
                    else
                    {
                        <span><i class="fa-solid fa-circle-xmark"></i></span>
                    }
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-black" title="Edit"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Details"><i class="fa-solid fa-magnifying-glass"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
