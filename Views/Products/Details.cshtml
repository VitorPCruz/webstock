@model WebStock.Models.Product

<div>
    <h4>Registro de Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Código de Barras
        </dt>
        <dd class = "col-sm-10">
            @Model.CodeBar
        </dd>
        <dt class = "col-sm-2">
            Código de Produtos
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductCode
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Description != null)
            {
                <span>@Model.Description</span>
            }
            else
            {
                <span>Sem descrição</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Ativo?
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Active == true)
            {
                <span><i class="fa-sharp fa-solid fa-circle-check"></i></span>
            }
            else
            {
                <span><i class="fa-solid fa-circle-xmark"></i></span>
            }
        </dd>
        <dt class = "col-sm-2">
            Quantidade Disp.
        </dt>
        <dd class = "col-sm-10">
            @Model.Quantity
        </dd>
        <dt class = "col-sm-2">
            Fornecedor
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Supplier != null)
            {
                <span>@Model.Supplier.Name</span>
            }
            else
            {
                <span>Sem fornecedor.</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Category != null)
            {
                <span>@Model.Category.Name</span>
            }
            else
            {
                <span>Sem categoria.</span>
            }
        </dd>
    </dl>
</div>
<hr />
<h4>Ações</h4>
<div>
    <dl class="row">
        <dt class="col-sm-4 align-middle">
            Você quer editar este registro?
        </dt>
        <dd class="col-sm-8 align-middle">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Editar</a>
        </dd>
        <dt class="col-sm-4 align-middle">
            Você quer remover este registro?
        </dt>
        <dd class="col-sm-8 align-middle">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Remover</button>
            </form>
        </dd>
        <dt class="col-sm-4 align-middle">
            Retornar à lista?
        </dt>
        <dd class="col-sm-8 align-middle">
            <a asp-action="Index" class="btn btn-dark">Voltar</a>
        </dd>
    </dl>
</div>
