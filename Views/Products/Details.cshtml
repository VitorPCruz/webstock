@model WebStock.Models.Product

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Code Bar:
        </dt>
        <dd class = "col-sm-10">
            @Model.CodeBar
        </dd>
        <dt class = "col-sm-2">
            Product Code:
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductCode
        </dd>
        <dt class = "col-sm-2">
            Description:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Description != null)
            {
                <span>@Model.Description</span>
            }
            else
            {
                <span>Without description</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Is Active?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class = "col-sm-2">
            Quantity Available:
        </dt>
        <dd class = "col-sm-10">
            @Model.Quantity
        </dd>
        <dt class = "col-sm-2">
            Supplier Name:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Supplier != null)
            {
                <span>@Model.Supplier.Name</span>
            }
            else
            {
                <span>Without category</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Category Name:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Category != null)
            {
                <span>@Model.Category.Name</span>
            }
            else
            {
                <span>Without category</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
