@model WebStock.Models.Product
@{
    ViewData["Title"] = "Editar Produto";
}

<p class="title">@ViewData["Title"] - @Model.Name</p>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset disabled>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">
                    </label>
                    @if (Model.SupplierId != null)
                    {
                        <input asp-for="Supplier.Name" class="form-control" />
                    }
                    else
                    {
                        <input value="Sem Fornecedor" class="form-control" />
                    }
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @if (Model.CategoryId != null)
                    {
                        <input asp-for="Category.Name" class="form-control" />
                    }
                    else
                    {
                        <input value="Sem Categoria" class="form-control" />
                    }
                </div>
            </fieldset>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeBar" class="control-label"></label>
                <input asp-for="CodeBar" class="form-control" />
                <span asp-validation-for="CodeBar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea cols="50" rows="6" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            @Html.DisplayNameFor(model => model.Active)
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> 
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
        <div class="row mb-3">
            <div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
